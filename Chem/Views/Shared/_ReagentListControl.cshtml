@model IEnumerable<Chem.Models.Reagent>

@{
    bool isEditMode = false;
    if (Model.Count() != 0)
    {
        isEditMode = true;
    }
}

<div>
    <select class="myBigFatSelect" id="reagentsSelect">
        <option>Ielādejam! Neko nespied!</option>
    </select>
    <div id="addReagent" class="imAMotherfingButton">+</div>
    <div id="startOverIGiveUp" class="imAMotherfingButton">@if(!isEditMode){<text>X</text> }else{ <text>X</text>}</div>
</div>
<div class="editor-field">
    <div id="reagentsDisplayNames">
        @if (isEditMode) {
            foreach(var item in Model) {
            var s = item.Name + Environment.NewLine;
            @: @s
        }}
        
    </div>
    <textarea id="reagents" name="reagents">
        @if (isEditMode) {
            foreach(var item in Model) {
            var s = item.ID;
            @: @s
        }}
    </textarea>
</div>

<script src="~/Scripts/reagentList.js" type="text/javascript"></script>